extends ../layout

block content
  .card-columns
    each item in data
      .card
        if item.image
          img.card-img-top.img-fluid(
            src=`${item.image.publicUrl}`
            alt=`${item.name} profile image`
          )
        img.card-img-top.img-fluid(
          src=item.cardUrl
          alt=item.name
        )
        .card-block
          h4.card-title=item.name
          p.card-text=item.about
          a.btn.btn-primary(href=item.publicUrl)=__('More')
