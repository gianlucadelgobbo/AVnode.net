.form-group
	label.h4.labelField
		!=__("Members")
	#members
		.alert.d-none
		each member, i in data.members
			.mb-3
				a(href='#' data-id=member._id data-crewid=data._id class=(data.members.length == 1 ? "disabled" : undefined))
					i.icon-trash
				!=" | "
				!=member.stagename
		#hide_members_cnt.form-check.mb-3.mt-3
			input.form-check-input(type='checkbox' id='hide_members' name='hide_members' value='true' checked=data.hide_members ? "checked" : undefined)
			label.labelField(for='hide_members')=__("Hide Members on public pages")

	.row
		.col-md-6.offset-md-3
			.input-group.autocomplete_members
				input.form-control(type='text' autocomplete='nope' placeholder='Member' value='')
				.input-group-append
					button.mb-2.btn.btn-success.disabled(type='button' data-crewid=data._id)
						i.icon-plus
						!=" "
						b=__("ADD MEMBER")
