.form-group
	label.labelField=__("Phones")
	#phone
		//
		- if (!data.phone || !data.phone.length) {
		-  data.phone = []
		-  data.phone.push({url:""});
		- }
		each item, i in data.phone
			.mb-3
				.input-group
					input.form-control(type='text' name='phone['+i+'][url]' placeholder=__("Phones") value=item.url)
					.input-group-append
						button.btn.btn-danger.remove_simple(type='button' data-list="phone" disabled=(data.phone.length < 2 ? "disabled" : undefined))
							i.icon-trash
	button.mb-2.btn.btn-success.btn-sm.duplicator(type='button' data-list="phone")
		i.icon-plus
		!=" "
		b=__("ADD PHONE")

