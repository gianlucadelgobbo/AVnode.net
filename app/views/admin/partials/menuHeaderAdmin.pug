nav.navbar.navbar_extended_template.navbar-toggleable-md.navbar-fixed-top.navbar-inverse.bg-inverse.navbar-expand-lg 
  button.navbar-toggler.navbar-toggler-right(type="button", data-toggle="collapse", data-target="#navbar-collapse_admin")
    span.sr-only=__("Open menu")
    i.icon-menu.toggle_icon
  a.navbar-brand(href='/', title="AVnode.net")
    img(src='/images/logo_avnode_bar.svg', height='30', class='main_logo' alt='AVnode.net')
  .collapse.navbar-collapse#navbar-collapse_admin
    ul.navbar-nav.mr-auto
      li.nav-item.mt-2.mb-2.d-block.d-lg-none
        b=__("Control Panel")
      - var exclude = ["/admin/footage", "/admin/playlists", "/admin/subscriptions"]
      each menuitem in config.adminMenu
        if user.is_admin || exclude.indexOf(menuitem.href) === -1
          li.nav-item.mt-2.mb-2.d-block.d-lg-none(class=currentUrl==menuitem.href ? "active" : undefined)
            a.nav-link.text-white(href=menuitem.href.replace("/admin/profile", "/admin/profile/"+user._id))
              span.mr-3(class=menuitem.icon)
              span=menuitem.label.defaultMessage
      if user.is_pro
        li.nav-item.mt-2.mb-2.d-block.d-lg-none
          a.nav-link.text-white(href="/adminpro")
            span.mr-3(class="icon-cog")
            span.menu-collapsed="Advanced Tools"
      li.nav-item.mt-4.mb-2.d-block.d-lg-none
        a.nav-link.text-white(href='/logout')      
          span.icon-sign-out-alt.fa-fw.mr-3
          span=global.__('Log out')
    ul.user_navbar.navbar-nav.d-none.d-lg-block
      if user
        //-li.nav-item.dropdown.user_menu.user_menu_logged                  
        li.nav-item.dropdown.user_menu.user_menu_logged
          a#userDropdown.nav-link.text-white.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            span.icon-user
          .dropdown-menu.dropdown-menu-right(aria-labelledby='userDropdown')
            a.dropdown-item(href='/'+user.slug)                    
              span.pr-2.icon-eye
              !=" "+global.__('Profile')
            a.dropdown-item(href='/admin/profile/'+user._id+'/public')                    
              span.pr-2.icon-cog
              !=" "+global.__('Control Panel')
            a.dropdown-item(href='/logout')                    
              span.pr-2.icon-exit
              !=" "+global.__('Log out')
      else
        li.nav-item.signup_ico
          a.nav-link.text-white.disabled(href='#')
            span.pr-2.icon-user
        li.nav-item.login
          a.nav-link.text-white(href='/login', title=global.__('Login'))
            !=global.__('Login')
        li.nav-item.signup
          a.nav-link.text-white(href='/signup', title=global.__('Sign up'))=global.__('Sign up')
