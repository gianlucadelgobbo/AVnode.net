.form-group
	label.labelField=__("Emails")
	#emails
		//
		- if (!data.emails || !data.emails.length) {
		-  data.emails = []
		-  data.emails.push({url:""});
		- }
		each item, i in data.emails
			.mb-3
				.input-group
					input.form-control(type='text' name='emails['+i+'][url]' placeholder=__("Emails") value=item.url)
					.input-group-append
						button.btn.btn-danger(type='button' disabled=(i==0 ? "disabled" : undefined) onclick=(i>0 ? "$(this).parent().parent().parent().remove()" : undefined))
							i.icon-trash
	button.mb-2.btn.btn-success.btn-sm.duplicator(type='button' data-duplicate="emails")
		i.icon-plus
		!=" "
		b=__("ADD EMAILS")

