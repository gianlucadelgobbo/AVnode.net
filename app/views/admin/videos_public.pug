extends ../layout_admin
block content
  .formcontainer(class=printable ? "printable" : undefined)
    .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
      h1.h2=data.title
      .btn-toolbar.mb-2.mb-md-0.d-print-none.text-right
        a.btn.btn-primary(href='/'+data.slug)=__("SHOW")
    //include partials/menuobj
    //h3.labelField.mb-3=__(config.cpanel[get.sez].title)+" "+__(config.cpanel[get.sez].forms[get.form].title)
    form(method="post")
      .row
        .col-md-7
          .form-group
            label.labelField(for='title')=__("Title")
            input.form-control(type='text' name='title' id='title' placeholder=__("Title") value=data.title)
            if err && Object.keys(err.errors).indexOf('title')!==-1
              .error-message=err.errors.title.message
          - var slugtitle = __("Video Url")
          - var slugplaceholder = __("Video Url")
          - var slughelptext = __("To have your video at https://avnode.net/videos/mybeautyfulvideo, please insert mybeautifulvideo (lower case, no spaces, no special characters)")
          include partials/slug
          include partials/is_public
          #categories.vjtv
            .row
              .col-sm-4
                label.labelField=__("VJTV Category")
                .labelADD
                  a(href='https://vjtelevision.com' target='_blank')
                    img(src='/images/VJTV.png')
              .col-sm-8
                if !user.is_admin
                  ul.list-unstyled.mt-3
                    li
                      input.mr-2(id="DOC", name="categories", type="checkbox" value="5be8708afc3961000000008e", checked=data.categories.map(item => {return item._id;}).indexOf("5be8708afc3961000000008e")!==-1 ? "checked" : undefined)
                      label(for="DOC")="DOC"
                    li
                      input.mr-2(id="PERFORMANCE", name="categories", type="checkbox" value="5be8708afc39610000000195", checked=data.categories.map(item => {return item._id;}).indexOf("5be8708afc39610000000195")!==-1 ? "checked" : undefined)
                      label(for="PERFORMANCE")="PERFORMANCE"
                    li
                      input.mr-2(id="VIDEO", name="categories", type="checkbox" value="5be8708afc39610000000112", checked=data.categories.map(item => {return item._id;}).indexOf("5be8708afc39610000000112")!==-1 ? "checked" : undefined)
                      label(for="VIDEO")="VIDEO"
                    li
                      input.mr-2(id="VJ-DJ_SET", name="categories", type="checkbox" value="5be8708afc39610000000218", checked=data.categories.map(item => {return item._id;}).indexOf("5be8708afc39610000000218")!==-1 ? "checked" : undefined)
                      label(for="VJ-DJ_SET")="VJ-DJ_SET"
                    li
                      input.mr-2(id="vjtv_exclude", name="vjtv_exclude", type="checkbox" value="1", checked=data.vjtv_exclude==1 ? "checked" : undefined)
                      label(for="vjtv_exclude")
                        b="VJ TV EXCLUDE"
                else
                  ul.list-unstyled.mt-3
                    li
                      input.mr-2(id="DOC", name="categories", type="radio" value="5be8708afc3961000000008e", checked=data.categories.map(item => {return item._id;}).indexOf("5be8708afc3961000000008e")!==-1 ? "checked" : undefined)
                      label(for="DOC")="DOC"
                    li
                      input.mr-2(id="PERFORMANCE", name="categories", type="radio" value="5be8708afc39610000000195", checked=data.categories.map(item => {return item._id;}).indexOf("5be8708afc39610000000195")!==-1 ? "checked" : undefined)
                      label(for="PERFORMANCE")="PERFORMANCE"
                    li
                      input.mr-2(id="VIDEO", name="categories", type="radio" value="5be8708afc39610000000112", checked=data.categories.map(item => {return item._id;}).indexOf("5be8708afc39610000000112")!==-1 ? "checked" : undefined)
                      label(for="VIDEO")="VIDEO"
                    li
                      input.mr-2(id="VJ-DJ_SET", name="categories", type="radio" value="5be8708afc39610000000218", checked=data.categories.map(item => {return item._id;}).indexOf("5be8708afc39610000000218")!==-1 ? "checked" : undefined)
                      label(for="VJ-DJ_SET")="VJ-DJ_SET"
          
          //include partials/addresses


        .col-md-5
          include partials/video
      include partials/abouts
      include partials/users
      hr
      button.btn.btn-primary.btn-lg.btn-block(type='submit')=__("Save")