.performance_item_wrapper
  if item.schedule
    .time_schedule=item.schedule.starttimeTime + " > "+item.schedule.endtimeTime

  if item.performance.imageFormats
    a(href="/events/"+data.slug+"/program/"+item.performance.slug+"/", title=item.performance.title)
      img.img-fluid(
        src=item.performance.imageFormats.small
        alt=item.performance.title
      )
  .performance_item_info_wrapper
    a(href="/events/"+data.slug+"/program/"+item.performance.slug+"/", title=item.performance.title)
      h4.performance_item_title=item.performance.title
    if item.performance.categories
      ul.list-inline.category_performance_item
        each category in item.performance.categories
          li.list-inline-item=category.name
    if item.performance.users
      .performance_users_item_wrapper
        .flex_left      
          if (item.performance.users.length > 1)
            div
              img.img-fluid(src="/images/icon_authors.svg", width="50", height="50", alt=global.__("Multiple performers"))
            div
              p.users_performance_item_name=item.users.length+" "+global.__("performers")
              p.users_performance_item_views=item.performance.stats.visits+" "+global.__("views")
          else              
            each user in item.performance.users
              div
                img(class=user.imageFormats.small.substring(user.imageFormats.small.lastIndexOf(".")+1), src=user.imageFormats.small, alt=user.stagename)
              div
                p.users_performance_item_name=user.stagename
                p.users_performance_item_views=item.performance.stats.visits+" "+global.__("views")
        .flex_right      
          .users_performance_item_likes
            span.color2.icon-heart
            br
            span.text-nowrap=item.performance.stats.likes+" "+global.__("likes")