- if (!basepath) basepath = ""
.gallery_item_wrapper
  a(href=basepath+"/galleries/"+item.slug+"/", title=item.title)
    if item.imageFormats
      img.card-img-top.img-fluid(src=item.imageFormats.small, alt=item.title)
    .gallery_item_info_wrapper
      .flex_left
        h4=item.title
      .flex_right.gallery_stats        
        if item.stats.visits
          .gallery_item_visits
            span.icon-eye
            br
            span.value=item.stats.visits
        if item.stats.likes
          .gallery_item_likes
            span.icon-heart
            br
            span.value=item.stats.likes 
        if item.stats.img
          .gallery_item_images
            span.icon-picture
            br
            span.value=item.stats.img
