.modal.fade#modalContact(tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel', aria-hidden='true')
  .modal-dialog.modal-lg.modal-dialog-centered
    .modal-content
      .modal-header
        h5#myLargeModalLabel.modal-title=global.__("Contact")
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
      .modal-body
        .alert.d-none
        if user
          form
            .form-group
              !=global.__("From")+": "
              b=user.stagename
            .form-group
              !=global.__("Subject")+": "
              b=global.__("Contact request for")+" "+data.stagename
              input(type="hidden", name="user", value=data._id)
              input(type="hidden", name="subject", value="Contact request for "+data.stagename)
            .form-group
              label(for='message')=global.__("Message")
              textarea#message.form-control(name="message", rows='10')
                !=global.__("Dear")+" "+data.stagename+",\n"
                !=global.__("I'm")+" "+user.stagename+",\n\n"
                !=global.__("Best regards")+"\n\n"
                !=user.stagename
      .modal-footer
        button.btn.btn-secondary(type='button', data-dismiss='modal')=global.__("cancel")
        button.btn.btn-primary(type='button')=global.__("SEND")
