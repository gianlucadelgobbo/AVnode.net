.performer_item_wrapper
  if item.imageFormats
    a(href="/"+item.slug+"/", stagename=item.stagename, title=item.stagename)
      img.card-img-top.img-fluid(
        class=item.imageFormats.large.substring(item.imageFormats.large.lastIndexOf(".")+1)
        src=item.imageFormats.large
        alt=item.stagename
      )
  .performer_item_info_wrapper
    a(href="/"+item.slug+"/", stagename=item.stagename, title=item.stagename)
      h4.performer_item_title=item.stagename
    ul.list-inline.performer_infos_list
      li!=item.addressesFormatted.join(", ")
