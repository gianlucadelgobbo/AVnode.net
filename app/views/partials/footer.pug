        h3 Corporate
        nav
          ul.footer-nav.corporate
            li
              a(href='/manifesto/', title='Manifesto') Manifesto
            li
              a(href='/terms/', title='Terms & Conditions')=global.__("Terms")
            li
              a(href='/privacy/', title='Privacy')=global.__("Privacy")
            li
              a(href='/contacts/', title='Contacts')=global.__("Contacts")
      .col-md-4.hidden-print
        h3 Social Networks
        ul.footer-nav.footer-nav-inline.socials
