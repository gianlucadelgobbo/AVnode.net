extends ../layout

block content
  form(method='post', action="/password/reset")
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='user', value=userId)
    .form-group
      label(for='password')=global.__('Password')
      input.form-control(type='password', name='password', id='password', placeholder=global.__('Use at least eight characters'), required)
    .form-group
      label(for='retypePassword')=global.__('Retype password')
      input.form-control(type='password', name='retypePassword', id='retypePassword', placeholder=global.__('Use at least eight characters'), required)
    .form-group
      button.btn.btn-primary.btn-success(type='submit')=global.__('reset password')
        i.fa.fa-angle-right.fa-fw
