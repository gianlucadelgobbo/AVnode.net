extends ../layout

block content
  form(method='post')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(for='email')=global.__('Email')
      input.form-control(type='email', name='email', id='email', placeholder=global.__('example@foo.bar'), autofocus, required)
    .form-group
      button.btn.btn-primary.btn-success(type='submit')=global.__('reset password')
        i.fa.fa-angle-right.fa-fw
