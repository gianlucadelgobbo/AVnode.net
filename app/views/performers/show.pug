extends ../layout
block teaser
  if data.teaserImageFormats.large
    .d-flex.justify-content-center.align-items-start
      img.img-fluid(
        src=data.teaserImageFormats.large
        alt=data.name
      )

block title
  if title
    .jumbotron.jumbotron-fluid
      .container
        .row
          .col-lg-8
            h1.display-4=data.stagename
            if data.name
              p.lead=data.name
            if data.about
              p=data.about
            each email in data.publicEmails
              i.fa.fa-fw.fa-envelope-o
              span=email.email
            if data.citizenship
              p=data.citizenship

          if data.image
            .col-lg-4
              img.card-img-top.img-fluid(
                src=data.imageFormats.medium
                alt=data.name
              )

block content
  .row
    .col-lg-12
      h3=__('Events')
      .card-deck
        each event in data.events
          .card
            if event.image
              img.card-img-top.img-fluid(
                src=event.imageFormats.medium
                alt=event.title
              )
            .card-block
              h4.card-title=event.title
              h6.card-subtitle.text-muted=event.subtitle
            .card-block.pt-0
              p.card-text=event.dateFormatted
              a.btn.btn-secondary(href=event.publicUrl)=__('More')
  br
  br
  .row
    .col-lg-12
      h3=__('Crews')
      .card-deck
        each crew in data.crews
          .card
            if crew.image
              img.card-img-top.img-fluid(
                src=crew.imageFormats.medium
                alt=crew.title
              )
            .card-block
              h4.card-title=crew.title
              h6.card-subtitle.text-muted=crew.subtitle
            .card-block.pt-0
              p.card-text=crew.dateFormatted
              a.btn.btn-secondary(href=crew.publicUrl)=__('More')
  br
  br
  .row
    .col-lg-12
      h3=__('Performances')
      .card-deck
        each performance in data.performances
          .card
            if performance.image
              img.card-img-top.img-fluid(
                src=performance.imageFormats.medium
                alt=performance.title
              )
            .card-block
              h4.card-title=performance.title
              h6.card-subtitle.text-muted=performance.subtitle
            .card-block.pt-0
              p.card-text=performance.dateFormatted
              a.btn.btn-secondary(href=performance.publicUrl)=__('More')
