extends ../layout
block teaser
  //if data.teaserImageFormats.large
    .d-flex.justify-content-center.align-items-start
      img.img-fluid(
        src=data.teaserImageFormats.large
        alt=data.stagename
      )

block title
  .performer_header_wrapper
    include header

block content
  .container
    section.row.performer_performances_wrapper
      .col-lg-12
        h2.main_title.indented_title.color1!=__('Performances')+" <small>(<span>"+data.stats.performances+"</span>)</small>"
        .row
          each item in data.performances
            .col-sm-4
              include ../partials/boxPerformance
      .text-center
        a.btn.btn-primary(href="/#{data.slug}/performances/page/#{nextpage}/")=__("Nexts")+" >>"
                  