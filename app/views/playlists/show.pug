extends ../layout

block teaser
  if playlist.teaserImage
    .d-flex.justify-content-center.align-items-start
      img.card-img-top.img-fluid(
        src=`${playlist.teaserImageFormats.large}`
        alt=`${playlist.name}`
      )

block title
  if title
    .jumbotron.jumbotron-fluid
      .container
        .row
          .col-lg-8
            h1.display-4=title
            p=playlist.about
          .col-lg-4
            if playlist.image
              img.card-img-top.img-fluid(
                src=playlist.imageFormats.medium
                alt=playlist.title
              )

block content
  .row
    .col-lg-12
      h3=__('Members')
      .card-columns
        //each member in playlist.members
          .card
            if member.image
              img.card-img-top.img-fluid(
                src=member.imageFormats.medium
                alt=member.name
              )
            .card-block
              h4.card-title
                =member.stagename
              a.btn.btn-primary(href=member.publicUrl)=__('More')
