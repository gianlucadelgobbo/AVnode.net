extends ../layout

block teaser
  if data.teaserImage
    .d-flex.justify-content-center.align-items-start
      img.card-img-top.img-fluid(
        src=data.teaserImageFormats.large
        alt=data.title
      )

block title
  if data.title
    .container
      .row.main_title_cnt
        .col-lg-9
          h1.main_title=data.title
            if editable
              !="  "
              a.badge.badge-danger(href="/admin/news/"+data._id+"/public")=global.__("EDIT")
          if data.stats
            .performance_stat_container
              .performance_stat_wrapper
                ul
                  if data.stats.visits
                    li=data.stats.visits + ' ' + global.__('Views')
                  li
                    span.likes_count=data.stats.likes ? data.stats.likes : 0
                    !=' ' + global.__('Likes')                      
        .col-lg-3.mt-md-4
          include ../partials/share_like

block content
  .container
    .row
      .col-lg-8
        p!=data.about
      .col-lg-4
        if data.image
          .mb-3
            img.card-img-top.img-fluid(
              src=data.imageFormats.small
              alt=data.title
            )
        if data.web && data.web.length
          ul.mb-3.list-unstyled
            each url in data.web
              if url.url
                li.text-nowrap.text-truncate.mb-3
                  - var tooltip = url.url.replace("http://","").replace("https://","").split("/")
                  a(href=url.url target="_blank" data-toggle="tooltip" data-placement="top" title=tooltip[0]+"/"+tooltip[1])
                    i.icon-link-light
                    !=" "
                    !=url.url
        if data.social && data.social.length
          ul.mb-3.list-unstyled
            each url in data.social
              if url.url 
                if url.url.indexOf('instagram.com/')!=-1
                  li.text-nowrap.text-truncate.mb-3
                    - var tooltip = url.url.replace("http://","").replace("https://","").split("/")
                    a(href=url.url target="_blank" data-toggle="tooltip" data-placement="top" title=tooltip[0]+"/"+tooltip[1])
                      i.icon-instagram
                      !=" "
                      !=url.url
                else if url.url.indexOf('twitter.com/')!=-1
                  li.text-nowrap.text-truncate.mb-3
                    a(href=url.url target="_blank" data-toggle="tooltip" data-placement="top" title=url.url.replace("http://","").replace("https://",""))
                      i.icon-twitter
                      !=" "
                      !=url.url
                else if url.url.indexOf('facebook.com/')!=-1 || url.url.indexOf('fb.com/')!=-1
                  li.text-nowrap.text-truncate.mb-3
                    a(href=url.url target="_blank" data-toggle="tooltip" data-placement="top" title=url.url.replace("http://","").replace("https://",""))
                      i.icon-facebook
                      !=" "
                      !=url.url
                else if url.url.indexOf('vimeo.com/')!=-1
                  li.text-nowrap.text-truncate.mb-3
                    a(href=url.url target="_blank" data-toggle="tooltip" data-placement="top" title=url.url.replace("http://","").replace("https://",""))
                      i.icon-vimeo
                      !=" "
                      !=url.url
                else if url.url.indexOf('youtube.com/')!=-1
                  li.text-nowrap.text-truncate.mb-3
                    a(href=url.url target="_blank" data-toggle="tooltip" data-placement="top" title=url.url.replace("http://","").replace("https://",""))
                      i.icon-youtube
                      !=" "
                      !=url.url
                else if url.url
                  li.text-nowrap.text-truncate.mb-3
                    a(href=url.url target="_blank" data-toggle="tooltip" data-placement="top" title=url.url.replace("http://","").replace("https://",""))
                      span.icon-link-light
                      !=" "
                      !=url.url
        h3=__("Author")
        each user in data.users
          .users_video_item_wrapper
            .media
              a.mr-3(href="/"+user.slug+"/")
                img(class=user.imageFormats.small.substring(user.imageFormats.small.lastIndexOf(".")+1), src=user.imageFormats.small, alt=user.stagename)
              .media-body
                p.users_performance_item_name
                  a.mr-3(href="/"+user.slug+"/")=user.stagename
                if user.addressesFormatted && user.addressesFormatted.length
                  p.users_performance_item_country!=user.addressesFormatted.join(", ")


